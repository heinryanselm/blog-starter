{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "../blog-starter/src/*"
      ]
    }
  },
  "include": [
    "../blog-starter/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../.next/types/**/*.ts",
    "../blog-with-comm",
    "./blog-starter/tailwind.config.ts",
    "ent/comments.js",
    "../.next/types/**/*.ts"
  ],
  "exclude": [
    "../blog-starter/node_modules"
  ]
}
